{
  "name": "guradian",
  "version": "1.0.0",
  "description": "argument assertion utility",
  "main": "index.js",
  "scripts": {
    "test": "jest --forceExit",
    "testWithCov": "npm run test && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keroxp/guardian.git"
  },
  "keywords": [
    "assert",
    "guard",
    "guardian"
  ],
  "author": "Yusuke Sakurai <kerokerokerop@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/keroxp/guardian/issues"
  },
  "homepage": "https://github.com/keroxp/guardian#readme",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "mapCoverage": true,
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*.test.(ts)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "util": "^0.10.3"
  },
  "devDependencies": {
    "@types/jest": "^21.1.4",
    "@types/node": "^8.0.46",
    "codecov": "^2.3.1",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.3",
    "typescript": "^2.5.3"
  }
}
